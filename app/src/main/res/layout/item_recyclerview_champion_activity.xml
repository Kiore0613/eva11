        android:textSize="20dp"
        android:text="hola"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_champion_info"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_champion_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DescripciÃ³n"
        android:layout_marginEnd="8dp"
        android:maxLines="5"
        app:layout_constraintStart_toEndOf="@+id/img_champion"
        app:layout_constraintTop_toBottomOf="@+id/tv_champion_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        />


</android.support.constraint.ConstraintLayout>